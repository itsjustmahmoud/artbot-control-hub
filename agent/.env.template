# Artbot Agent Configuration
# Copy this file to .env and modify values as needed

# Hub connection (update to your hub's IP/domain)
HUB_URL=http://localhost:8000
HUB_DOMAIN=localhost

# Agent identification (leave as default to use hostname)
# AGENT_ID=robot-001

# Timing configuration
HEARTBEAT_INTERVAL=30
MONITOR_INTERVAL=10

# ROS2 paths (update to match your setup)
ROS2_WORKSPACE=/home/ubuntu/ros2_ws
ROS2_PACKAGE=person_following_system

# Robot hardware (update IP as needed)
CREATE3_IP=192.168.186.2
WORKSPACE_DIR=/home/artbot/workspace
WORKSPACE_LOG_DIR=/home/artbot/workspace/logs

# Logging
LOG_LEVEL=INFO
